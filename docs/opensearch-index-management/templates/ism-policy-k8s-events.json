{
  "policy": {
    "description": "Kubernetes event log lifecycle policy - 30일 보관 (Hot → Warm → Delete)",
    "default_state": "hot",
    "ism_template": [
      {
        "index_patterns": ["k8s-events-*"],
        "priority": 100
      }
    ],
    "states": [
      {
        "name": "hot",
        "actions": [],
        "transitions": [
          {
            "state_name": "warm",
            "conditions": {
              "min_index_age": "7d"
            }
          }
        ]
      },
      {
        "name": "warm",
        "actions": [
          {
            "retry": {
              "count": 3,
              "backoff": "exponential",
              "delay": "1m"
            },
            "read_only": {}
          },
          {
            "replica_count": {
              "number_of_replicas": 0
            }
          },
          {
            "index_priority": {
              "priority": 25
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "30d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ]
  }
}
